# ES queries
# you need to edit your icinga hostname and beat name
# this will be removed in future and we try to do it another more nice way

[queries]
agg_notify_per_host={
      "aggs": {
        "notifyperhost": {
          "terms": {
            "field": "icinga.host",
            "size": 100,
            "order": {
              "_count": "desc"
            }
          }
        }
      },
      "size": 0,
      "version": true,
      "_source": {
        "excludes": []
      },
      "stored_fields": [
        "*"
      ],
      "query": {
        "bool": {
          "must": [
            {
              "query_string": {
                "query": "type:icingabeat.event.notification",
                "analyze_wildcard": true,
                "default_field": "*"
              }
            },
            {
              "query_string": {
                "query": "beat.hostname:>>> HERE <<< (example icinga1)",
                "analyze_wildcard": true,
                "default_field": "*"
              }
            },
            {
              "query_string": {
                "query": "icinga.check_result.check_source:>>> HERE <<< (ex. fqdn of source)",
                "analyze_wildcard": true,
                "default_field": "*"
              }
            },
            {
              "range": {
                "@timestamp": {
                  "gte": %%GTE%%,
                  "lte": %%LTE%%,
                  "format": "epoch_millis"
                }
              }
            }
          ],
          "must_not": [
            {
              "query_string": {
                "query": "notification_handled:true",
                "analyze_wildcard": true,
                "default_field" : "*"
              }
            }
          ],

          "filter": [],
          "should": []
        }
      }
    }
